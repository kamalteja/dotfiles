# Set how an application window opens

for_window [app_id="pavucontrol"] floating enable, resize set width 40 ppt height 30 ppt
for_window [app_id="org.gnome.Calendar"] floating enable, resize set width 40 ppt height 30 ppt
for_window [title="terminal-float"] floating enable, resize set width 30 ppt height 40 ppt, border pixel 3
for_window [title="terminal-float-htop"] floating enable, resize set width 2560 pixel height 720 pixel, border pixel 3
for_window [class="Code"] move to workspace 2, focus, layout tabbed
for_window [class="Google-chrome" title="Microsoft Teams.*" app_id="chrome-*"] move to workspace 10
for_window [title="Microsoft Teams.*"] move to workspace 10
for_window [title="Evolution"] move to workspace 10
for_window [title="Thunderbird"] move to workspace 10
